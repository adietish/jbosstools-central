      <id>central</id>
      <repositories>
        <repository>
          <id>central</id>
          <name>central</name>
          <url>http://repo1.maven.org/maven2/</url>
        </repository>
      </repositories>
      <pluginRepositories>
        <pluginRepository>
          <id>central</id>
          <name>central</name>
